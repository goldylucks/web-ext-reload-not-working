{
	"private": true,
	"scripts": {
		"build": "parcel build source/manifest.json --no-content-hash --no-source-maps --dist-dir distribution --no-cache --detailed-report 0",
		"lint": "run-p lint:*",
		"lint-fix": "run-p 'lint:* -- --fix'",
		"lint:css": "stylelint source/**/*.css",
		"lint:js": "xo",
		"test": "run-p lint:* build",
		"watch": "parcel watch source/manifest.json --dist-dir distribution --no-cache --no-hmr"
	},
	"browserslist": [
		"last 1 Chrome version",
		"last 1 Firefox version"
	],
	"xo": {
		"envs": [
			"browser"
		],
		"rules": {
			"no-unused-vars": [
				"error",
				{
					"varsIgnorePattern": "browser"
				}
			]
		}
	},
	"stylelint": {
		"extends": "stylelint-config-xo"
	},
	"dependencies": {
		"@reduxjs/toolkit": "^1.8.0",
		"bootstrap": "^5.1.3",
		"react": "^17.0.2",
		"react-bootstrap": "^2.2.1",
		"react-bootstrap-typeahead": "^6.0.0-alpha.9",
		"react-dom": "^17.0.2",
		"react-redux": "^7.2.6",
		"webext-options-sync": "^3.0.1",
		"webextension-polyfill": "^0.8.0"
	},
	"devDependencies": {
		"@parcel/config-webextension": "^2.3.2",
		"@parcel/transformer-image": "^2.3.2",
		"eslint": "^8.11.0",
		"eslint-plugin-import": "^2.25.4",
		"eslint-plugin-react": "^7.29.3",
		"npm-run-all": "^4.1.5",
		"parcel": "^2.3.2",
		"prettier": "^2.5.1",
		"rollup-plugin-import-css": "^3.0.3",
		"stylelint": "^14.5.3",
		"stylelint-config-xo": "^0.20.1",
		"xo": "^0.48.0"
	},
	"webExt": {
		"sourceDir": "distribution"
	}
}
